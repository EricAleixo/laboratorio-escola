<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-5xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to paciente_path(@paciente), class: "inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Voltar para Paciente</span>
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4 mb-3">
        <div class="flex-shrink-0 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl p-3 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Adicionar Exames</h1>
          <p class="mt-1 text-sm text-gray-600">Selecione os exames que o paciente irá realizar</p>
        </div>
      </div>
    </div>

    <%= form_with(model: @exame_paciente, local: true, class: "space-y-6") do |form| %>
      <%= form.hidden_field :paciente_id, value: @paciente.id %>
      
      <% if @exame_paciente.errors.any? %>
        <div class="rounded-xl bg-red-50 border border-red-200 p-4">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="flex-1">
              <h3 class="text-sm font-semibold text-red-800 mb-2">Erro ao salvar</h3>
              <ul class="text-sm text-red-700 space-y-1">
                <% @exame_paciente.errors.full_messages.each do |message| %>
                  <li>• <%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Info do Paciente -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 px-6 py-4 border-b border-gray-200">
          <div class="flex items-center gap-3">
            <div class="bg-indigo-100 rounded-lg p-2">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-gray-900">Dados do Paciente</h2>
          </div>
        </div>
        
        <div class="p-6">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div>
              <p class="text-xs font-medium text-gray-500 mb-1">Nome Completo</p>
              <p class="text-sm font-semibold text-gray-900"><%= @paciente.nome %></p>
            </div>
            <div>
              <p class="text-xs font-medium text-gray-500 mb-1">Idade</p>
              <p class="text-sm font-semibold text-gray-900"><%= @paciente.idade %> anos</p>
            </div>
            <div>
              <p class="text-xs font-medium text-gray-500 mb-1">Data de Nascimento</p>
              <p class="text-sm font-semibold text-gray-900"><%= @paciente.data_nascimento.strftime("%d/%m/%Y") %></p>
            </div>
            <div>
              <p class="text-xs font-medium text-gray-500 mb-1">Sexo</p>
              <p class="text-sm font-semibold text-gray-900"><%= @paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Seleção de Exames -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="bg-blue-100 rounded-lg p-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                </svg>
              </div>
              <h2 class="text-lg font-semibold text-gray-900">Exames a Realizar</h2>
            </div>
            <div class="flex items-center gap-4">
              <button type="button" id="searchToggle" class="text-sm text-indigo-600 hover:text-indigo-700 font-medium flex items-center gap-1.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                Buscar
              </button>
              <span class="text-sm text-gray-500">
                <span id="selectedCount" class="font-semibold text-indigo-600">0</span> selecionados
              </span>
            </div>
          </div>
        </div>

        <div class="p-6">
          <!-- Campo de Busca -->
          <div id="searchBox" class="mb-4 hidden">
            <div class="relative">
              <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              <input 
                type="text" 
                id="examSearch" 
                placeholder="Digite para buscar exames..."
                class="block w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400"
              >
            </div>
          </div>

          <!-- Ações Rápidas -->
          <div class="flex gap-2 mb-4 pb-4 border-b border-gray-200">
            <button type="button" id="selectAll" class="px-3 py-1.5 text-xs font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded-lg transition-colors">
              Selecionar Todos
            </button>
            <button type="button" id="deselectAll" class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
              Limpar Seleção
            </button>
          </div>

          <!-- Lista de Exames -->
          <div id="examsList" class="space-y-2 max-h-96 overflow-y-auto pr-2">
            <% @exames.each do |exame| %>
              <label class="exam-item flex items-start gap-3 p-4 rounded-lg border border-gray-200 hover:border-indigo-300 hover:bg-indigo-50/50 cursor-pointer transition-all group">
                <input 
                  type="checkbox" 
                  name="exame_paciente[exame_ids][]" 
                  value="<%= exame.id %>"
                  class="mt-1 w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 cursor-pointer"
                  data-exam-name="<%= exame.nome.downcase %>"
                >
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between gap-2">
                    <p class="text-sm font-medium text-gray-900 group-hover:text-indigo-700 transition-colors">
                      <%= exame.nome %>
                    </p>
                    <span class="flex-shrink-0 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= exame.tipo == 'qualitativo' ? 'bg-purple-100 text-purple-700' : 'bg-green-100 text-green-700' %>">
                      <%= exame.tipo.capitalize %>
                    </span>
                  </div>
                  <% if exame.descricao.present? %>
                    <p class="mt-1 text-xs text-gray-500 line-clamp-1">
                      <%= exame.descricao %>
                    </p>
                  <% end %>
                </div>
              </label>
            <% end %>
          </div>

          <div id="noResults" class="hidden text-center py-8">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-sm text-gray-500">Nenhum exame encontrado</p>
          </div>
        </div>
      </div>

      <!-- Botões de Ação -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <%= link_to "Cancelar", paciente_path(@paciente), 
            class: "inline-flex items-center gap-2 px-5 py-2.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all" %>
        
        <%= form.submit "Adicionar Exames Selecionados", 
            class: "inline-flex items-center gap-2 px-6 py-2.5 border border-transparent rounded-lg text-sm font-semibold text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-sm transition-all" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span>Adicionar Exames Selecionados</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const checkboxes = document.querySelectorAll('input[name="exame_paciente[exame_ids][]"]');
  const selectedCount = document.getElementById('selectedCount');
  const selectAllBtn = document.getElementById('selectAll');
  const deselectAllBtn = document.getElementById('deselectAll');
  const searchToggle = document.getElementById('searchToggle');
  const searchBox = document.getElementById('searchBox');
  const examSearch = document.getElementById('examSearch');
  const examsList = document.getElementById('examsList');
  const noResults = document.getElementById('noResults');
  const examItems = document.querySelectorAll('.exam-item');

  // Atualizar contador
  function updateCount() {
    const count = document.querySelectorAll('input[name="exame_paciente[exame_ids][]"]:checked').length;
    selectedCount.textContent = count;
  }

  // Toggle busca
  searchToggle.addEventListener('click', function() {
    searchBox.classList.toggle('hidden');
    if (!searchBox.classList.contains('hidden')) {
      examSearch.focus();
    }
  });

  // Buscar exames
  examSearch.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase().trim();
    let visibleCount = 0;

    examItems.forEach(item => {
      const checkbox = item.querySelector('input[type="checkbox"]');
      const examName = checkbox.getAttribute('data-exam-name');
      
      if (examName.includes(searchTerm)) {
        item.style.display = '';
        visibleCount++;
      } else {
        item.style.display = 'none';
      }
    });

    if (visibleCount === 0) {
      examsList.classList.add('hidden');
      noResults.classList.remove('hidden');
    } else {
      examsList.classList.remove('hidden');
      noResults.classList.add('hidden');
    }
  });

  // Selecionar todos
  selectAllBtn.addEventListener('click', function() {
    examItems.forEach(item => {
      if (item.style.display !== 'none') {
        const checkbox = item.querySelector('input[type="checkbox"]');
        checkbox.checked = true;
      }
    });
    updateCount();
  });

  // Desselecionar todos
  deselectAllBtn.addEventListener('click', function() {
    checkboxes.forEach(cb => cb.checked = false);
    updateCount();
  });

  // Event listeners para checkboxes
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateCount);
  });

  // Inicializar contador
  updateCount();
});
</script>

<style>
/* Custom scrollbar */
#examsList::-webkit-scrollbar {
  width: 6px;
}

#examsList::-webkit-scrollbar-track {
  background: #f3f4f6;
  border-radius: 3px;
}

#examsList::-webkit-scrollbar-thumb {
  background: #d1d5db;
  border-radius: 3px;
}

#examsList::-webkit-scrollbar-thumb:hover {
  background: #9ca3af;
}

/* Animação */
.exam-item {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-5px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>