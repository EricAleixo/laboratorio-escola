<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "Voltar para Paciente", paciente_path(@paciente), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
  </div>

  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Adicionar Exame</h3>
        <p class="mt-1 text-sm text-gray-600">
          Adicione um novo exame para o paciente.
        </p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with(model: @exame_paciente, local: true, class: "space-y-6") do |form| %>
        <%= form.hidden_field :paciente_id, value: @paciente.id %>
        <%= form.hidden_field :resultado, id: "resultado_hidden" %>
        
        <% if @exame_paciente.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Erro ao salvar o exame:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% @exame_paciente.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
          <div class="md:grid md:grid-cols-3 md:gap-6">
            <div class="md:col-span-1">
              <div class="px-4 sm:px-0">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Dados do Exame</h3>
                <p class="mt-1 text-sm text-gray-600">
                  Informações sobre o exame realizado.
                </p>
              </div>
            </div>
            <div class="mt-5 space-y-6 md:col-span-2 md:mt-0">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Dados do Paciente</label>
                <div class="bg-gradient-to-r from-indigo-50 to-blue-50 p-4 rounded-lg border-2 border-indigo-200">
                  <div class="grid grid-cols-2 gap-3">
                    <div>
                      <p class="text-xs text-indigo-600 font-semibold uppercase tracking-wider">Nome</p>
                      <p class="text-sm text-gray-900 font-medium"><%= @paciente.nome %></p>
                    </div>
                    <div>
                      <p class="text-xs text-indigo-600 font-semibold uppercase tracking-wider">Idade</p>
                      <p class="text-sm text-gray-900 font-medium"><%= @paciente.idade %> anos</p>
                    </div>
                    <div>
                      <p class="text-xs text-indigo-600 font-semibold uppercase tracking-wider">Data de Nascimento</p>
                      <p class="text-sm text-gray-900"><%= @paciente.data_nascimento.strftime("%d/%m/%Y") %></p>
                    </div>
                    <div>
                      <p class="text-xs text-indigo-600 font-semibold uppercase tracking-wider">Sexo</p>
                      <p class="text-sm text-gray-900"><%= @paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %></p>
                    </div>
                  </div>
                </div>
              </div>

              <div>
                <%= form.label :exame_id, "Tipo de Exame", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.collection_select :exame_id, @exames, :id, :nome, { prompt: "Selecione o tipo de exame" }, { class: "mt-1 block w-full pl-4 pr-10 py-3 text-base border-2 border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-lg shadow-sm transition", id: "exame_select" } %>
              </div>

              <div>
                <%= form.label :data_exame, "Data do Exame", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.date_field :data_exame, class: "mt-1 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-lg px-4 py-3 transition" %>
              </div>

              <!-- Campo de Resultado Quantitativo -->
              <div id="resultado_quantitativo">
                <%= form.label :resultado, "Resultado (Opcional)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.number_field :resultado, step: :any, class: "mt-1 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-lg px-4 py-3 transition", placeholder: "Digite o valor do resultado", id: "resultado_numero" %>
                <p class="mt-1 text-xs text-gray-500">Pode ser preenchido posteriormente quando o resultado estiver disponível</p>
              </div>

              <!-- Campo de Resultado Qualitativo -->
              <div id="resultado_qualitativo" style="display: none;">
                <label class="block text-sm font-semibold text-gray-700 mb-3">Resultado do Exame</label>
                <div class="grid grid-cols-2 gap-4">
                  <button type="button" onclick="selectResultado('Presente')" id="btn_presente" class="resultado-btn flex flex-col items-center justify-center p-6 rounded-xl border-3 border-gray-300 bg-white hover:border-green-400 hover:bg-green-50 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-green-200">
                    <div class="w-16 h-16 rounded-full bg-green-100 flex items-center justify-center mb-3">
                      <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                      </svg>
                    </div>
                    <span class="text-lg font-bold text-gray-700">Presente</span>
                    <span class="text-xs text-gray-500 mt-1">Detectado</span>
                  </button>

                  <button type="button" onclick="selectResultado('Ausente')" id="btn_ausente" class="resultado-btn flex flex-col items-center justify-center p-6 rounded-xl border-3 border-gray-300 bg-white hover:border-red-400 hover:bg-red-50 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-red-200">
                    <div class="w-16 h-16 rounded-full bg-red-100 flex items-center justify-center mb-3">
                      <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                      </svg>
                    </div>
                    <span class="text-lg font-bold text-gray-700">Ausente</span>
                    <span class="text-xs text-gray-500 mt-1">Não detectado</span>
                  </button>
                </div>
                <p class="mt-3 text-xs text-gray-500 text-center">Selecione o resultado do exame qualitativo</p>
              </div>

              <div>
                <%= form.label :observacoes, "Observações", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.text_area :observacoes, rows: 4, class: "mt-1 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-lg px-4 py-3 transition", placeholder: "Observações sobre o exame..." %>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end gap-3">
          <%= link_to "Cancelar", paciente_path(@paciente), class: "px-6 py-3 border-2 border-gray-300 rounded-lg shadow-sm text-sm font-semibold text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition" %>
          <%= form.submit "Adicionar Exame", class: "px-6 py-3 border-2 border-transparent rounded-lg shadow-sm text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.border-3 {
  border-width: 3px;
}

.resultado-btn.selected {
  transform: scale(1.05);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

.resultado-btn.selected#btn_presente {
  border-color: #10b981;
  background-color: #d1fae5;
}

.resultado-btn.selected#btn_ausente {
  border-color: #ef4444;
  background-color: #fee2e2;
}
</style>

<script>
  let selectedResultado = null;

  function selectResultado(valor) {
    selectedResultado = valor;
    document.getElementById('resultado_hidden').value = valor;
    
    // Remover seleção de todos os botões
    document.querySelectorAll('.resultado-btn').forEach(btn => {
      btn.classList.remove('selected');
    });
    
    // Adicionar seleção ao botão clicado
    if (valor === 'Presente') {
      document.getElementById('btn_presente').classList.add('selected');
    } else {
      document.getElementById('btn_ausente').classList.add('selected');
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
    const exameSelect = document.getElementById('exame_select');
    const resultadoQuantitativo = document.getElementById('resultado_quantitativo');
    const resultadoQualitativo = document.getElementById('resultado_qualitativo');
    const resultadoNumero = document.getElementById('resultado_numero');
    const resultadoHidden = document.getElementById('resultado_hidden');
    
    // Dados dos exames com seus tipos
    const examesData = <%= raw @exames.map { |e| { id: e.id, tipo: e.tipo } }.to_json %>;
    
    function toggleResultadoField() {
      const exameId = parseInt(exameSelect.value);
      const exame = examesData.find(e => e.id === exameId);
      
      // Limpar seleção anterior
      selectedResultado = null;
      document.querySelectorAll('.resultado-btn').forEach(btn => {
        btn.classList.remove('selected');
      });
      resultadoHidden.value = '';
      resultadoNumero.value = '';
      
      if (exame && exame.tipo === 'qualitativo') {
        // Mostrar campo qualitativo, esconder quantitativo
        resultadoQuantitativo.style.display = 'none';
        resultadoQualitativo.style.display = '';
        resultadoNumero.removeAttribute('name');
      } else {
        // Mostrar campo quantitativo, esconder qualitativo
        resultadoQuantitativo.style.display = '';
        resultadoQualitativo.style.display = 'none';
        resultadoNumero.setAttribute('name', 'exame_paciente[resultado]');
      }
    }
    
    if (exameSelect) {
      exameSelect.addEventListener('change', toggleResultadoField);
      toggleResultadoField();
    }
  });
</script>