<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to pacientes_path, class: "inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Voltar para Pacientes</span>
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 bg-gradient-to-br from-yellow-500 to-orange-600 rounded-2xl p-3 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Editar Paciente</h1>
          <p class="mt-1 text-sm text-gray-600">Atualize as informações do paciente</p>
        </div>
      </div>
    </div>

    <%= form_with(model: @paciente, local: true, class: "space-y-6") do |form| %>
      <!-- Mensagens de Erro -->
      <% if @paciente.errors.any? %>
        <div class="rounded-xl bg-red-50 border border-red-200 p-4 animate-shake">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="flex-1">
              <h3 class="text-sm font-semibold text-red-800 mb-2">Erro ao atualizar o paciente</h3>
              <ul class="text-sm text-red-700 space-y-1">
                <% @paciente.errors.full_messages.each do |message| %>
                  <li>• <%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Card do Formulário -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <!-- Header do Card -->
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 px-6 py-4 border-b border-gray-200">
          <div class="flex items-center gap-3">
            <div class="bg-indigo-100 rounded-lg p-2">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-gray-900">Informações Pessoais</h2>
          </div>
        </div>

        <!-- Conteúdo do Formulário -->
        <div class="p-6 space-y-6">
          <!-- Nome Completo -->
          <div>
            <%= form.label :nome, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Nome Completo <span class="text-red-500">*</span>
              </span>
            <% end %>
            <%= form.text_field :nome, 
                placeholder: "Digite o nome completo do paciente", 
                class: "block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400" %>
          </div>

          <!-- Data de Nascimento e Sexo -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Data de Nascimento -->
            <div>
              <%= form.label :data_nascimento, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Data de Nascimento <span class="text-red-500">*</span>
                </span>
              <% end %>
              <%= form.date_field :data_nascimento, 
                  class: "block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900" %>
              <p class="mt-1 text-xs text-gray-500" id="idade-info">
                <% if @paciente.data_nascimento %>
                  Idade: <%= @paciente.idade %> anos
                <% end %>
              </p>
            </div>

            <!-- Sexo -->
            <div>
              <%= form.label :sexo, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
                <span class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                  Sexo <span class="text-red-500">*</span>
                </span>
              <% end %>
              
              <div class="grid grid-cols-2 gap-3">
                <!-- Masculino -->
                <label class="relative flex items-center p-4 border-2 rounded-xl cursor-pointer transition-all <%= @paciente.sexo == 'M' ? 'border-blue-500 bg-blue-50' : 'border-gray-200 hover:border-blue-300 hover:bg-blue-50' %>">
                  <%= form.radio_button :sexo, 'M', class: "sr-only sexo-radio" %>
                  <div class="flex items-center gap-3 flex-1">
                    <div class="flex-shrink-0 <%= @paciente.sexo == 'M' ? 'bg-blue-100' : 'bg-gray-100' %> rounded-lg p-2">
                      <svg class="w-5 h-5 <%= @paciente.sexo == 'M' ? 'text-blue-600' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-semibold text-gray-900">Masculino</p>
                    </div>
                    <div class="flex-shrink-0">
                      <div class="w-5 h-5 rounded-full border-2 <%= @paciente.sexo == 'M' ? 'border-blue-600 bg-blue-600' : 'border-gray-300' %> flex items-center justify-center">
                        <% if @paciente.sexo == 'M' %>
                          <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </label>

                <!-- Feminino -->
                <label class="relative flex items-center p-4 border-2 rounded-xl cursor-pointer transition-all <%= @paciente.sexo == 'F' ? 'border-pink-500 bg-pink-50' : 'border-gray-200 hover:border-pink-300 hover:bg-pink-50' %>">
                  <%= form.radio_button :sexo, 'F', class: "sr-only sexo-radio" %>
                  <div class="flex items-center gap-3 flex-1">
                    <div class="flex-shrink-0 <%= @paciente.sexo == 'F' ? 'bg-pink-100' : 'bg-gray-100' %> rounded-lg p-2">
                      <svg class="w-5 h-5 <%= @paciente.sexo == 'F' ? 'text-pink-600' : 'text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-semibold text-gray-900">Feminino</p>
                    </div>
                    <div class="flex-shrink-0">
                      <div class="w-5 h-5 rounded-full border-2 <%= @paciente.sexo == 'F' ? 'border-pink-600 bg-pink-600' : 'border-gray-300' %> flex items-center justify-center">
                        <% if @paciente.sexo == 'F' %>
                          <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </label>
              </div>
            </div>
          </div>

          <!-- Informações Calculadas -->
          <div class="bg-gradient-to-br from-gray-50 to-blue-50 rounded-xl p-5 border border-gray-200">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 bg-blue-100 rounded-lg p-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm font-semibold text-gray-900 mb-1">Resumo do Paciente</p>
                <div class="text-xs text-gray-600 space-y-1">
                  <p><strong>Nome:</strong> <span id="nome-resumo"><%= @paciente.nome %></span></p>
                  <p><strong>Data de Nascimento:</strong> <span id="data-resumo"><%= @paciente.data_nascimento&.strftime('%d/%m/%Y') %></span></p>
                  <p><strong>Idade:</strong> <span id="idade-resumo"><%= @paciente.idade %> anos</span></p>
                  <p><strong>Sexo:</strong> <span id="sexo-resumo"><%= @paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %></span></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Botões de Ação -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200 bg-white rounded-2xl shadow-sm p-6">
        <%= link_to paciente_path(@paciente), class: "inline-flex items-center gap-2 px-5 py-2.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
          <span>Cancelar</span>
        <% end %>
        
        <%= form.submit "Atualizar Paciente", class: "inline-flex items-center gap-2 px-6 py-2.5 border-transparent rounded-lg text-sm font-semibold text-white bg-gradient-to-r from-yellow-500 to-orange-600 hover:from-yellow-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 shadow-sm transition-all" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span>Atualizar Paciente</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5px); }
  75% { transform: translateX(5px); }
}

.animate-shake {
  animation: shake 0.3s ease-in-out;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const nomeInput = document.querySelector('input[name="paciente[nome]"]');
  const dataInput = document.querySelector('input[name="paciente[data_nascimento]"]');
  const sexoRadios = document.querySelectorAll('.sexo-radio');
  
  const nomeResumo = document.getElementById('nome-resumo');
  const dataResumo = document.getElementById('data-resumo');
  const idadeResumo = document.getElementById('idade-resumo');
  const sexoResumo = document.getElementById('sexo-resumo');
  const idadeInfo = document.getElementById('idade-info');

  // Calcular idade
  function calcularIdade(dataNascimento) {
    const hoje = new Date();
    const nascimento = new Date(dataNascimento);
    let idade = hoje.getFullYear() - nascimento.getFullYear();
    const mes = hoje.getMonth() - nascimento.getMonth();
    if (mes < 0 || (mes === 0 && hoje.getDate() < nascimento.getDate())) {
      idade--;
    }
    return idade;
  }

  // Atualizar nome
  if (nomeInput && nomeResumo) {
    nomeInput.addEventListener('input', function() {
      nomeResumo.textContent = this.value || '<%= @paciente.nome %>';
    });
  }

  // Atualizar data e idade
  if (dataInput && dataResumo && idadeResumo) {
    dataInput.addEventListener('change', function() {
      if (this.value) {
        const data = new Date(this.value + 'T00:00:00');
        dataResumo.textContent = data.toLocaleDateString('pt-BR');
        
        const idade = calcularIdade(this.value);
        idadeResumo.textContent = idade + ' anos';
        idadeInfo.textContent = 'Idade: ' + idade + ' anos';
      }
    });
  }

  // Atualizar sexo e visual dos radio buttons
  sexoRadios.forEach(radio => {
    radio.addEventListener('change', function() {
      const valor = this.value;
      sexoResumo.textContent = valor === 'M' ? 'Masculino' : 'Feminino';
      
      // Atualizar visual de todos os labels
      document.querySelectorAll('label[class*="border-blue"], label[class*="border-pink"]').forEach(label => {
        label.classList.remove('border-blue-500', 'bg-blue-50', 'border-pink-500', 'bg-pink-50');
        label.classList.add('border-gray-200');
        
        const icon = label.querySelector('.flex-shrink-0:first-of-type');
        const checkCircle = label.querySelector('.flex-shrink-0:last-of-type > div');
        
        if (icon) {
          icon.classList.remove('bg-blue-100', 'bg-pink-100');
          icon.classList.add('bg-gray-100');
          const svg = icon.querySelector('svg');
          if (svg) {
            svg.classList.remove('text-blue-600', 'text-pink-600');
            svg.classList.add('text-gray-400');
          }
        }
        
        if (checkCircle) {
          checkCircle.classList.remove('border-blue-600', 'bg-blue-600', 'border-pink-600', 'bg-pink-600');
          checkCircle.classList.add('border-gray-300');
          checkCircle.innerHTML = '';
        }
      });
      
      // Atualizar label selecionado
      const label = this.closest('label');
      if (valor === 'M') {
        label.classList.remove('border-gray-200');
        label.classList.add('border-blue-500', 'bg-blue-50');
        
        const icon = label.querySelector('.flex-shrink-0:first-of-type');
        if (icon) {
          icon.classList.remove('bg-gray-100');
          icon.classList.add('bg-blue-100');
          const svg = icon.querySelector('svg');
          if (svg) {
            svg.classList.remove('text-gray-400');
            svg.classList.add('text-blue-600');
          }
        }
        
        const checkCircle = label.querySelector('.flex-shrink-0:last-of-type > div');
        if (checkCircle) {
          checkCircle.classList.remove('border-gray-300');
          checkCircle.classList.add('border-blue-600', 'bg-blue-600');
          checkCircle.innerHTML = '<svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>';
        }
      } else if (valor === 'F') {
        label.classList.remove('border-gray-200');
        label.classList.add('border-pink-500', 'bg-pink-50');
        
        const icon = label.querySelector('.flex-shrink-0:first-of-type');
        if (icon) {
          icon.classList.remove('bg-gray-100');
          icon.classList.add('bg-pink-100');
          const svg = icon.querySelector('svg');
          if (svg) {
            svg.classList.remove('text-gray-400');
            svg.classList.add('text-pink-600');
          }
        }
        
        const checkCircle = label.querySelector('.flex-shrink-0:last-of-type > div');
        if (checkCircle) {
          checkCircle.classList.remove('border-gray-300');
          checkCircle.classList.add('border-pink-600', 'bg-pink-600');
          checkCircle.innerHTML = '<svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>';
        }
      }
    });
  });
});
</script> 