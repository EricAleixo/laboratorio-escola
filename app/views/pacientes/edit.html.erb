<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "← Voltar para Pacientes", pacientes_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
  </div>

  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Editar Paciente</h3>
        <p class="mt-1 text-sm text-gray-600">
          Atualize as informações do paciente abaixo.
        </p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with(model: @paciente, local: true, class: "space-y-6") do |form| %>
        <% if @paciente.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Erro ao atualizar o paciente:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% @paciente.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
          <div class="md:grid md:grid-cols-3 md:gap-6">
            <div class="md:col-span-1">
              <div class="px-4 sm:px-0">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Informações Pessoais</h3>
                <p class="mt-1 text-sm text-gray-600">
                  Dados básicos do paciente.
                </p>
              </div>
            </div>
            <div class="mt-5 space-y-6 md:col-span-2 md:mt-0">
              <div>
                <%= form.label :nome, "Nome Completo", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :nome, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md px-4 py-3" %>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                <div>
                  <%= form.label :data_nascimento, "Data de Nascimento", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.date_field :data_nascimento, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md px-4 py-3" %>
                </div>

                <div>
                  <%= form.label :sexo, "Sexo", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.select :sexo, options_for_select([['Masculino', 'M'], ['Feminino', 'F']]), { prompt: "Selecione o sexo" }, { class: "mt-1 block w-full pl-4 pr-10 py-3 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end">
          <%= link_to "Cancelar", paciente_path(@paciente), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= form.submit "Atualizar Paciente", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
