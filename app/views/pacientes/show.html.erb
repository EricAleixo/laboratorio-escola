<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "Voltar para Pacientes", pacientes_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
  </div>

  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <div class="flex items-center mb-4">
      <div class="flex items-center justify-center w-14 h-14 rounded-full bg-indigo-100 text-indigo-700 mr-4">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
      </div>
      <div>
        <h2 class="text-2xl font-bold">Paciente</h2>
        <div class="text-gray-500 text-sm mt-1"><%= @paciente.nome %></div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
      <div>
        <p><strong>Data de Nascimento:</strong> <%= @paciente.data_nascimento.strftime('%d/%m/%Y') %></p>
        <p><strong>Idade:</strong> <span class="inline-block px-2 py-1 rounded bg-blue-100 text-blue-800 font-semibold"><%= @paciente.idade %> anos</span></p>
      </div>
      <div>
        <p><strong>Sexo:</strong>
          <% if @paciente.sexo == 'M' %>
            <span class="inline-flex items-center px-2 py-1 rounded bg-blue-200 text-blue-900 font-semibold"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 w-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
            </svg>
              Masculino
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-1 rounded bg-pink-200 text-pink-900 font-semibold"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 w-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
            </svg>
              Feminino
            </span>
          <% end %>
        </p>
      </div>
    </div>
    <div class="flex space-x-2 mt-4">
      <%= link_to "Editar Paciente", edit_paciente_path(@paciente), class: "inline-flex items-center justify-center rounded-md border border-transparent bg-yellow-500 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2" %>
      <%= button_to "Excluir Paciente", paciente_path(@paciente), 
          method: :delete, 
          data: { turbo_confirm: "Tem certeza?" }, 
          class: "inline-flex items-center justify-center rounded-md border border-transparent bg-red-600 px-4 py-2 text-sm cursor-pointer font-medium text-white shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-bold flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-indigo-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0 1 18 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3 1.5 1.5 3-3.75" />
        </svg>
        Exames Realizados
      </h2>
      <div class="flex space-x-3">
        <%= link_to paciente_adicionar_exame_path(@paciente), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Adicionar Exame
        <% end %>
        
        <% if @paciente.exame_pacientes.any? %>
          <%= link_to emitir_exames_path(@paciente), target: "_blank", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Emitir Exames
          <% end %>
          
          <%= link_to preview_pdf_path(@paciente), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", target: "_blank" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Pré-visualizar PDF
          <% end %>
        <% end %>
      </div>
    </div>
    <% if @paciente.exame_pacientes.any? %>
      <!-- Desktop Table -->
      <div class="hidden lg:block overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-900">Exame</th>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-900">Data</th>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-900">Resultado</th>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-900">Referência</th>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-900">Faixa Etária</th>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-900">Situação</th>
              <th class="px-4 py-2 text-left text-sm font-semibold text-gray-900">Ações</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @paciente.exame_pacientes.each do |exame| %>
              <% ref = exame.unidade_referencia %>
              <% situacao = exame.situacao_resultado %>
              <tr>
                <td class="px-4 py-2"><%= exame.exame.nome %></td>
                <td class="px-4 py-2"><%= exame.data_exame.strftime('%d/%m/%Y') %></td>
                <td class="px-4 py-2 font-bold">
                  <% if exame.exame.tipo == "quantitativo" %>
                    <span class="<%= case situacao 
                                      when :normal then 'text-green-700 bg-green-50 border border-green-800 rounded-full py-1 px-2'
                                      when :abaixo then 'text-yellow-700 bg-yellow-50 border border-yellow-800 rounded-full py-1 px-2' 
                                      when :acima then 'text-red-700 bg-red-50 border border-red-800 rounded-full py-1 px-2'
                                      else 'text-gray-700' 
                                    end %>">
                      <%= exame.resultado %>
                    </span>
                  <% else %>
                    <% if exame.resultado.downcase == "presente" %>
                      <span class="inline-flex items-center px-2 py-1 rounded bg-green-100 text-green-800 font-semibold">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                        </svg>
                        Presente
                      </span>
                    <% elsif exame.resultado.downcase == "ausente" %>
                      <span class="inline-flex items-center px-2 py-1 rounded bg-red-100 text-red-800 font-semibold">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        Ausente
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded bg-gray-100 text-gray-800 font-medium">
                        <%= exame.resultado %>
                      </span>
                    <% end %>
                  <% end %>
                </td>

                <% if exame.exame.tipo == "quantitativo" %>
                  <td class="px-4 py-2">
                    <% if ref %>
                      <%= ref.valor_minimo %> - <%= ref.valor_maximo %> <%= ref.unidade_medida.simbolo %>
                    <% else %>
                      <span class="text-red-600">Sem referência</span>
                    <% end %>
                  </td>
                  <td class="px-4 py-2">
                    <% if ref %>
                      <span class="text-xs text-gray-600"><%= ref.faixa_etaria %></span>
                    <% else %>
                      <span class="text-red-600">-</span>
                    <% end %>
                  </td>
                  <td class="px-4 py-2">
                    <span class="inline-block px-2 py-1 rounded <%= case situacao when :normal then 'bg-green-100 text-green-800' when :abaixo then 'bg-yellow-100 text-yellow-800' when :acima then 'bg-red-100 text-red-800' else 'bg-gray-100 text-gray-800' end %>">
                      <% if situacao == :normal %>
                        Dentro do esperado
                      <% elsif situacao == :abaixo %>
                        Abaixo do esperado
                      <% elsif situacao == :acima %>
                        Acima do esperado
                      <% else %>
                        Indefinido
                      <% end %>
                    </span>
                  </td>
                <% else %> <!-- qualitativo -->
                  <td class="px-4 py-2 text-gray-500 italic" colspan="2">—</td>
                  <td class="px-4 py-2">
                    <span class="inline-block px-2 py-1 rounded bg-indigo-100 text-indigo-800">
                      <%= exame.resultado %>
                    </span>
                  </td>
                <% end %>

                <td class="px-4 py-2">
                  <%= link_to "Ver", exame_paciente_path(exame), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>
      </div>

      <!-- Mobile Card View -->
      <div class="lg:hidden space-y-4">
        <% @paciente.exame_pacientes.each do |exame| %>
          <% ref = exame.unidade_referencia %>
          <% situacao = exame.situacao_resultado %>
          <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
            <div class="px-4 py-4">
              <div class="flex items-center justify-between mb-3">
                <h4 class="text-lg font-medium text-gray-900">
                  <%= exame.exame.nome %>
                </h4>
                <span class="inline-block px-2 py-1 rounded text-xs font-medium <%= case situacao when :normal then 'bg-green-100 text-green-800' when :abaixo then 'bg-yellow-100 text-yellow-800' when :acima then 'bg-red-100 text-red-800' else 'bg-gray-100 text-gray-800' end %>">
                  <% if situacao == :normal %>
                    Dentro do esperado
                  <% elsif situacao == :abaixo %>
                    Abaixo do esperado
                  <% elsif situacao == :acima %>
                    Acima do esperado
                  <% else %>
                    Indefinido
                  <% end %>
                </span>
              </div>
              
              <div class="grid grid-cols-2 gap-4 text-sm mb-4">
                <div>
                  <span class="font-medium text-gray-900">Data:</span>
                  <div class="text-gray-600"><%= exame.data_exame.strftime('%d/%m/%Y') %></div>
                </div>
                <div>
                  <span class="font-medium text-gray-900">Resultado:</span>
                  <div class="font-bold text-gray-900"><%= exame.resultado %></div>
                </div>
                <div class="col-span-2">
                  <span class="font-medium text-gray-900">Referência:</span>
                  <div class="text-gray-600">
                    <% if ref %>
                      <%= ref.valor_minimo %> - <%= ref.valor_maximo %> <%= ref.unidade_medida.simbolo %>
                      <span class="text-xs text-gray-500 block">(<%= ref.faixa_etaria %>)</span>
                    <% else %>
                      <span class="text-red-600">Sem referência</span>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <div class="flex justify-end">
                <%= link_to "Ver Detalhes", exame_paciente_path(exame), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Nenhum exame cadastrado para este paciente.</p>
    <% end %>
  </div>
</div>
