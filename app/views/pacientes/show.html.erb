<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to pacientes_path, class: "inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Voltar para Pacientes</span>
      <% end %>
    </div>

    <!-- Card do Paciente -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden mb-6">
      <!-- Header com gradiente -->
      <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-8 py-6">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 bg-white/20 backdrop-blur-sm rounded-full p-4">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-white"><%= @paciente.nome %></h1>
            <p class="text-indigo-100 text-sm mt-1">Dados do Paciente</p>
          </div>
        </div>
      </div>

      <!-- Conteúdo -->
      <div class="p-8">
        <!-- Informações do Paciente -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-5 border border-blue-100">
            <div class="flex items-center gap-3 mb-2">
              <div class="bg-blue-100 rounded-lg p-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <p class="text-sm font-medium text-gray-600">Data de Nascimento</p>
            </div>
            <p class="text-xl font-bold text-gray-900"><%= @paciente.data_nascimento.strftime('%d/%m/%Y') %></p>
          </div>

          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-5 border border-green-100">
            <div class="flex items-center gap-3 mb-2">
              <div class="bg-green-100 rounded-lg p-2">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <p class="text-sm font-medium text-gray-600">Idade</p>
            </div>
            <p class="text-xl font-bold text-gray-900"><%= @paciente.idade %> anos</p>
          </div>

          <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-5 border border-purple-100">
            <div class="flex items-center gap-3 mb-2">
              <div class="bg-purple-100 rounded-lg p-2">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              </div>
              <p class="text-sm font-medium text-gray-600">Sexo</p>
            </div>
            <p class="text-xl font-bold text-gray-900">
              <% if @paciente.sexo == 'M' %>
                <span class="inline-flex items-center gap-1.5">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"/>
                  </svg>
                  Masculino
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1.5">
                  <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"/>
                  </svg>
                  Feminino
                </span>
              <% end %>
            </p>
          </div>
        </div>

        <!-- Ações do Paciente -->
        <div class="flex flex-wrap gap-3 pt-6 border-t border-gray-200">
          <%= link_to edit_paciente_path(@paciente), class: "inline-flex items-center gap-2 px-4 py-2.5 bg-yellow-500 hover:bg-yellow-600 text-white text-sm font-semibold rounded-lg transition-all shadow-sm" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span>Editar Paciente</span>
          <% end %>

          <%= button_to paciente_path(@paciente), 
              method: :delete, 
              data: { confirm: "Tem certeza que deseja excluir este paciente e todos os seus exames?" }, 
              class: "inline-flex items-center gap-2 px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg transition-all shadow-sm",
              form: { style: "display: inline;" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <span>Excluir Paciente</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Exames Realizados -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5 border-b border-gray-200">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div class="flex items-center gap-3">
            <div class="bg-blue-100 rounded-lg p-2">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
              </svg>
            </div>
            <div>
              <h2 class="text-xl font-bold text-gray-900">Exames Realizados</h2>
              <p class="text-sm text-gray-600"><%= @paciente.exame_pacientes.count %> exame(s) registrado(s)</p>
            </div>
          </div>

          <div class="flex flex-wrap gap-2">
            <%= link_to paciente_adicionar_exame_path(@paciente), class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-lg transition-all shadow-sm" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              <span>Adicionar Exame</span>
            <% end %>
            
            <% if @paciente.exame_pacientes.any? %>
              <%= link_to emitir_exames_path(@paciente), target: "_blank", class: "inline-flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-semibold rounded-lg transition-all shadow-sm" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <span class="hidden sm:inline">Emitir Exames</span>
              <% end %>
              
              <%= link_to preview_pdf_path(@paciente), class: "inline-flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg transition-all shadow-sm", target: "_blank" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
                <span class="hidden sm:inline">PDF</span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="p-6">
        <% if @paciente.exame_pacientes.any? %>
          <div class="space-y-3">
            <% @paciente.exame_pacientes.each_with_index do |exame, index| %>
              <% ref = exame.unidade_referencia %>
              <% situacao = exame.situacao_resultado %>
              <% tipo_exame = exame.exame.tipo %>
              
              <div class="bg-gradient-to-r from-gray-50 to-white rounded-xl border border-gray-200 hover:shadow-md transition-all animate-fade-in" style="animation-delay: <%= index * 0.05 %>s">
                <div class="p-5">
                  <div class="flex flex-col lg:flex-row lg:items-center gap-4">
                    <!-- Indicador de Status -->
                    <div class="flex-shrink-0">
                      <% if tipo_exame == 'qualitativo' %>
                        <div class="w-12 h-12 rounded-full flex items-center justify-center <%= exame.resultado&.downcase == 'presente' ? 'bg-green-100' : 'bg-red-100' %>">
                          <svg class="w-6 h-6 <%= exame.resultado&.downcase == 'presente' ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <% if exame.resultado&.downcase == 'presente' %>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            <% else %>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            <% end %>
                          </svg>
                        </div>
                      <% else %>
                        <% cor_bg = case situacao 
                              when :normal then 'bg-green-100'
                              when :acima then 'bg-red-100'
                              when :abaixo then 'bg-yellow-100'
                              else 'bg-gray-100'
                            end
                            cor_text = case situacao 
                              when :normal then 'text-green-600'
                              when :acima then 'text-red-600'
                              when :abaixo then 'text-yellow-600'
                              else 'text-gray-600'
                            end %>
                        <div class="w-12 h-12 rounded-full flex items-center justify-center <%= cor_bg %>">
                          <svg class="w-6 h-6 <%= cor_text %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                          </svg>
                        </div>
                      <% end %>
                    </div>

                    <!-- Info do Exame -->
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= exame.exame.nome %></h3>
                      
                      <div class="flex flex-wrap items-center gap-4 text-sm">
                        <span class="flex items-center gap-1.5 text-gray-600">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                          <%= exame.data_exame.strftime('%d/%m/%Y') %>
                        </span>

                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= tipo_exame == 'qualitativo' ? 'bg-purple-100 text-purple-700' : 'bg-green-100 text-green-700' %>">
                          <%= tipo_exame.capitalize %>
                        </span>

                        <% if tipo_exame == 'quantitativo' && ref %>
                          <span class="text-xs text-gray-500">
                            Referência: <%= ref.valor_minimo %> - <%= ref.valor_maximo %> <%= ref.unidade_medida.simbolo %>
                          </span>
                        <% end %>
                      </div>
                    </div>

                    <!-- Resultado e Status -->
                    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3">
                      <div class="text-center">
                        <p class="text-xs text-gray-500 mb-1">Resultado</p>
                        <% if tipo_exame == 'quantitativo' %>
                          <p class="text-2xl font-bold <%= case situacao 
                                                            when :normal then 'text-green-600'
                                                            when :abaixo then 'text-yellow-600'
                                                            when :acima then 'text-red-600'
                                                            else 'text-gray-600'
                                                          end %>">
                            <%= exame.resultado %>
                          </p>
                        <% else %>
                          <% if exame.resultado&.downcase == 'presente' %>
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                              </svg>
                              Presente
                            </span>
                          <% else %>
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium bg-red-100 text-red-800">
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                              </svg>
                              Ausente
                            </span>
                          <% end %>
                        <% end %>
                      </div>

                      <% if tipo_exame == 'quantitativo' %>
                        <div>
                          <% if situacao == :normal %>
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                              </svg>
                              Normal
                            </span>
                          <% elsif situacao == :abaixo %>
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                              </svg>
                              Abaixo
                            </span>
                          <% elsif situacao == :acima %>
                            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                              </svg>
                              Acima
                            </span>
                          <% else %>
                            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                              Sem referência
                            </span>
                          <% end %>
                        </div>
                      <% end %>

                      <%= link_to exame_paciente_path(exame), class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all shadow-sm" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Ver Detalhes
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Nenhum exame cadastrado</h3>
            <p class="text-sm text-gray-600 mb-6">Este paciente ainda não possui exames realizados.</p>
            <%= link_to paciente_adicionar_exame_path(@paciente), class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              <span>Adicionar Primeiro Exame</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.5s ease-out both;
}
</style>