<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Pacientes</h1>
      <p class="mt-2 text-sm text-gray-700">Lista de todos os pacientes cadastrados no sistema.</p>
    </div>
  </div>

  <div class="mt-6">
    <%= form_with(url: pacientes_path, method: :get, local: true, class: "flex gap-4") do |form| %>
      <div class="flex-1">
        <%= form.text_field :search, 
            value: params[:search], 
            placeholder: "Buscar por nome...", 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2" %>
      </div>
      <div class="flex gap-2">
        <%= form.submit "Buscar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Limpar", pacientes_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
  
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Nome</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Data de Nascimento</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Idade</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Sexo</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Exames</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Ações</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @pacientes.each do |paciente| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                    <%= link_to paciente.nome, paciente_path(paciente), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.data_nascimento&.strftime("%d/%m/%Y") %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.idade %> anos
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.exame_pacientes.count %> exames
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <div class="flex space-x-2">
                      <%= link_to "Ver", paciente_path(paciente), class: "text-indigo-600 hover:text-indigo-900" %>
                      <%= link_to "Editar", edit_paciente_path(paciente), class: "text-indigo-600 hover:text-indigo-900" %>
                      <%= button_to "Excluir", paciente_path(paciente), 
                          method: :delete, 
                          data: { confirm: "Tem certeza?" }, 
                          class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer",
                          form: { style: "display: inline;" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
