<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-xl font-semibold text-gray-900">Pacientes</h1>
      <p class="mt-2 text-sm text-gray-700">Lista de todos os pacientes cadastrados no sistema.</p>
    </div>
  </div>

  <div class="mt-6">
    <%= form_with(url: pacientes_path, method: :get, local: true, class: "flex gap-4") do |form| %>
      <div class="flex-1">
        <%= form.text_field :search, 
            value: params[:search], 
            placeholder: "Buscar por nome...", 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2" %>
      </div>
      <div class="flex gap-2">
        <%= form.submit "Buscar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Limpar", pacientes_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
  
  <!-- Desktop Table -->
  <div class="mt-8 hidden lg:block">
    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
      <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Nome</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Data de Nascimento</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Idade</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Sexo</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Exames</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Ações</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @pacientes.each do |paciente| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                    <%= link_to paciente.nome, paciente_path(paciente), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.data_nascimento&.strftime("%d/%m/%Y") %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.idade %> anos
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= paciente.exame_pacientes.count %> exames
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 text-right text-sm font-medium">
                    <div class="flex gap-5">
                      <%= link_to paciente_path(paciente), class: "text-indigo-600 hover:text-indigo-900" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                      <%end%>
                      <%= link_to edit_paciente_path(paciente), class: "text-indigo-600 hover:text-indigo-900" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>
                      <% end %>
                      <%= link_to paciente_adicionar_exame_path(paciente), class: "text-green-600 hover:text-green-900" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                        </svg>
                      <% end %>
                      <%= button_to paciente_path(paciente), 
                          method: :delete, 
                          data: { confirm: "Tem certeza?" }, 
                          class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer",
                          form: { style: "display: inline;" } do%>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                          </svg>
                      <%end%>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>

  <!-- Mobile Card View -->
  <div class="mt-8 lg:hidden">
    <div class="space-y-4">
      <% @pacientes.each do |paciente| %>
        <div class="bg-white shadow rounded-lg border border-gray-200 overflow-hidden">
          <div class="px-4 py-4">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-medium text-gray-900">
                <%= link_to paciente.nome, paciente_path(paciente), class: "text-indigo-600 hover:text-indigo-900" %>
              </h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                <%= paciente.exame_pacientes.count %> exames
              </span>
            </div>
            
            <div class="grid grid-cols-2 gap-4 text-sm text-gray-600 mb-4">
              <div>
                <span class="font-medium text-gray-900">Nascimento:</span>
                <div><%= paciente.data_nascimento&.strftime("%d/%m/%Y") %></div>
              </div>
              <div>
                <span class="font-medium text-gray-900">Idade:</span>
                <div><%= paciente.idade %> anos</div>
              </div>
              <div class="col-span-2">
                <span class="font-medium text-gray-900">Sexo:</span>
                <div><%= paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %></div>
              </div>
            </div>
            
            <div class="flex flex-wrap gap-2">
              <%= link_to "Ver", paciente_path(paciente), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
              <%= link_to "Editar", edit_paciente_path(paciente), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <%= link_to "+ Exame", paciente_adicionar_exame_path(paciente), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
              <%= button_to "Excluir", paciente_path(paciente), 
                  method: :delete, 
                  data: { confirm: "Tem certeza?" }, 
                  class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700",
                  form: { class: "inline" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
