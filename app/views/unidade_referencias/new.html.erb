<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center gap-3">
        <span class="inline-flex items-center justify-center bg-blue-100 text-blue-600 rounded-full p-4 shadow-sm">
          <svg class="w-10 h-10" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M12 20a8 8 0 100-16 8 8 0 000 16z" />
          </svg>
        </span>
        <div>
          <h1 class="text-3xl font-extrabold text-gray-900">Nova Unidade de Referência</h1>
          <p class="mt-1 text-gray-600">Adicione uma nova unidade de referência para o exame <strong><%= @exame.nome %></strong>.</p>
        </div>
      </div>
      <%= link_to "← Voltar para #{@exame.nome}", exame_path(@exame), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 shadow transition" %>
    </div>
    <div class="mb-4">
      <%= link_to "Ver Unidades de Referência", exame_unidade_referencias_path(@exame), class: "text-blue-600 hover:text-blue-900 text-sm font-medium" %>
    </div>
    <div class="bg-white bg-opacity-90 shadow-xl rounded-3xl p-8">
      <%= form_with(url: exame_unidade_referencias_path(@exame), scope: :unidade_referencia, local: true, class: "space-y-8") do |form| %>
        <% if @unidade_referencia.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Erro ao salvar a unidade de referência:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% @unidade_referencia.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
          <div class="md:grid md:grid-cols-3 md:gap-6">
            <div class="md:col-span-1">
              <div class="px-4 sm:px-0">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Valores de Referência</h3>
                <p class="mt-1 text-sm text-gray-600">
                  Defina os valores de referência para esta unidade.
                </p>
              </div>
            </div>
            <div class="mt-5 space-y-6 md:col-span-2 md:mt-0">
              <div>
                <%= form.label :unidade_medida_id, "Unidade de Medida", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.collection_select :unidade_medida_id, UnidadeMedida.all.order(:nome), :id, :nome, { prompt: "Selecione uma unidade de medida" }, { class: "mt-1 block w-full pl-6 pr-12 py-4 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
                <div>
                  <%= form.label :valor_minimo, "Valor Mínimo", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.number_field :valor_minimo, step: :any, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md px-4 py-3" %>
                </div>

                <div>
                  <%= form.label :valor_maximo, "Valor Máximo", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.number_field :valor_maximo, step: :any, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md px-4 py-3" %>
                </div>
              </div>

              <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-3">
                <div>
                  <%= form.label :sexo, "Sexo", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.select :sexo, options_for_select([['Masculino', 'M'], ['Feminino', 'F'], ['Ambos', 'A']]), { prompt: "Selecione o sexo" }, { class: "mt-1 block w-full pl-4 pr-10 py-3 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
                </div>

                <div>
                  <%= form.label :idade_minima, "Idade Mínima", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.number_field :idade_minima, min: 0, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md px-4 py-3" %>
                </div>

                <div>
                  <%= form.label :idade_maxima, "Idade Máxima", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= form.number_field :idade_maxima, min: 0, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md px-4 py-3" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end">
          <%= link_to "Cancelar", exame_path(@exame), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= form.submit "Criar Unidade de Referência", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
