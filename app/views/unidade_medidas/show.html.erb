<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-5xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to unidade_medidas_path, class: "inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Voltar para Unidades de Medida</span>
      <% end %>
    </div>

    <!-- Card Principal da Unidade -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden mb-6">
      <!-- Header com gradiente -->
      <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-8 py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div class="flex-shrink-0 bg-white/20 backdrop-blur-sm rounded-2xl p-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-white"><%= @unidade_medida.nome %></h1>
              <p class="text-indigo-100 text-sm mt-1">Detalhes da Unidade de Medida</p>
            </div>
          </div>

          <div class="flex-shrink-0">
            <div class="inline-flex items-center justify-center min-w-[4rem] px-4 h-16 rounded-2xl bg-white/20 backdrop-blur-sm border-2 border-white/40">
              <span class="text-3xl font-bold text-white break-all text-center">
                <%= @unidade_medida.simbolo %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Conteúdo -->
      <div class="p-8">
        <!-- Informações da Unidade -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-5 border border-blue-100">
            <div class="flex items-center gap-3 mb-2">
              <div class="bg-blue-100 rounded-lg p-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
              </div>
              <p class="text-sm font-medium text-gray-600">Nome Completo</p>
            </div>
            <p class="text-xl font-bold text-gray-900 break-words"><%= @unidade_medida.nome %></p>
          </div>

          <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-5 border border-purple-100">
            <div class="flex items-center gap-3 mb-2">
              <div class="bg-purple-100 rounded-lg p-2">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
              </div>
              <p class="text-sm font-medium text-gray-600">Símbolo</p>
            </div>
            <p class="text-xl font-bold text-gray-900 break-all"><%= @unidade_medida.simbolo %></p>
          </div>
        </div>

        <!-- Ações -->
        <div class="flex flex-wrap gap-3 pt-6 border-t border-gray-200">
          <%= link_to edit_unidade_medida_path(@unidade_medida), class: "inline-flex items-center gap-2 px-4 py-2.5 bg-yellow-500 hover:bg-yellow-600 text-white text-sm font-semibold rounded-lg transition-all shadow-sm" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span>Editar Unidade</span>
          <% end %>

          <%= button_to unidade_medida_path(@unidade_medida), 
              method: :delete, 
              data: { confirm: "Tem certeza que deseja excluir esta unidade de medida?" }, 
              class: "inline-flex items-center gap-2 px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg transition-all shadow-sm",
              form: { style: "display: inline;" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <span>Excluir Unidade</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Exames que usam esta unidade -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="bg-blue-100 rounded-lg p-2">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
              </svg>
            </div>
            <div>
              <h2 class="text-xl font-bold text-gray-900">Exames Vinculados</h2>
              <p class="text-sm text-gray-600"><%= @unidade_medida.exames.count %> exame(s) utilizando esta unidade</p>
            </div>
          </div>
        </div>
      </div>

      <div class="p-6">
        <% if @unidade_medida.exames.any? %>
          <div class="space-y-3">
            <% @unidade_medida.exames.each_with_index do |exame, index| %>
              <div class="bg-gradient-to-r from-gray-50 to-white rounded-xl border border-gray-200 hover:shadow-md transition-all animate-fade-in" style="animation-delay: <%= index * 0.05 %>s">
                <div class="p-5">
                  <div class="flex items-center justify-between gap-4">
                    <div class="flex items-center gap-4 flex-1 min-w-0">
                      <div class="flex-shrink-0">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
                          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                          </svg>
                        </div>
                      </div>

                      <div class="flex-1 min-w-0">
                        <%= link_to exame_path(exame), class: "text-lg font-semibold text-gray-900 hover:text-indigo-600 transition-colors block" do %>
                          <span class="break-words"><%= exame.nome %></span>
                        <% end %>
                        
                        <div class="flex items-center gap-3 mt-1">
                          <% if exame.ativo? %>
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                              </svg>
                              Ativo
                            </span>
                          <% else %>
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                              </svg>
                              Inativo
                            </span>
                          <% end %>

                          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium <%= exame.tipo == 'qualitativo' ? 'bg-purple-100 text-purple-700' : 'bg-green-100 text-green-700' %>">
                            <%= exame.tipo.capitalize %>
                          </span>
                        </div>
                      </div>
                    </div>

                    <%= link_to exame_path(exame), class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all shadow-sm flex-shrink-0" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      <span class="hidden sm:inline">Ver Exame</span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Nenhum exame vinculado</h3>
            <p class="text-sm text-gray-600 mb-6">Esta unidade de medida ainda não está sendo utilizada por nenhum exame.</p>
            <%= link_to exames_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <span>Ver Exames</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.5s ease-out both;
}

.break-all {
  word-break: break-all;
  overflow-wrap: break-word;
}

.break-words {
  word-wrap: break-word;
  overflow-wrap: break-word;
}
</style>