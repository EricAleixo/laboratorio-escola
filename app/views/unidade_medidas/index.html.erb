<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
            <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-2.5 shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            Unidades de Medida
          </h1>
          <p class="mt-2 text-sm text-gray-600">Gerencie as unidades de medida utilizadas nos exames</p>
        </div>
        
        <%= link_to new_unidade_medida_path, class: "inline-flex items-center gap-2 px-5 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white text-sm font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all transform hover:scale-105" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <span>Nova Unidade</span>
        <% end %>
      </div>
    </div>

    <!-- Barra de Busca -->
    <div class="mb-6">
      <%= form_with(url: unidade_medidas_path, method: :get, local: true, class: "bg-white rounded-2xl shadow-sm border border-gray-200 p-6") do |form| %>
        <div class="flex items-center gap-3 mb-4">
          <div class="bg-blue-100 rounded-lg p-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-gray-900">Buscar Unidade</h2>
        </div>

        <div class="flex gap-3">
          <div class="flex-1 relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <%= form.text_field :search, 
                value: params[:search], 
                placeholder: "Digite o nome ou símbolo da unidade...", 
                class: "block w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400" %>
          </div>
          
          <%= form.submit "Buscar", class: "inline-flex items-center gap-2 px-5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-lg transition-all shadow-sm" %>
          
          <%= link_to unidade_medidas_path, class: "inline-flex items-center gap-2 px-5 py-2.5 border border-gray-300 hover:bg-gray-50 text-gray-700 text-sm font-medium rounded-lg transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <span>Limpar</span>
          <% end %>
        </div>

        <% if params[:search].present? %>
          <div class="mt-3 flex items-center gap-2 text-sm">
            <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-600">Buscando por:</span>
            <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
              <%= params[:search] %>
            </span>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Estatísticas -->
    <% if @unidade_medidas.any? %>
      <div class="mb-6 bg-white rounded-xl shadow-sm border border-gray-200 p-5">
        <div class="flex items-center gap-3">
          <div class="bg-indigo-100 rounded-lg p-3">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-600">Total de Unidades</p>
            <p class="text-2xl font-bold text-gray-900"><%= @unidade_medidas.count %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Lista de Unidades -->
    <% if @unidade_medidas.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @unidade_medidas.each_with_index do |unidade_medida, index| %>
          <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden transition-all hover:shadow-md animate-fade-in" style="animation-delay: <%= index * 0.05 %>s">
            <div class="p-6">
              <div class="flex items-start justify-between gap-3 mb-4">
                <div class="flex-1 min-w-0">
                  <%= link_to unidade_medida_path(unidade_medida), class: "text-lg font-semibold text-gray-900 hover:text-indigo-600 transition-colors block" do %>
                    <span class="line-clamp-2"><%= unidade_medida.nome %></span>
                  <% end %>
                </div>
                
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center justify-center min-w-[3rem] h-12 px-2 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 text-indigo-700 font-bold text-sm break-all text-center">
                    <%= unidade_medida.simbolo %>
                  </span>
                </div>
              </div>

              <!-- Informações Adicionais -->
              <div class="mb-4 pb-4 border-b border-gray-200">
                <div class="flex items-start gap-2 text-sm text-gray-600">
                  <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                  </svg>
                  <span class="break-words">Símbolo: <strong class="text-gray-900"><%= unidade_medida.simbolo %></strong></span>
                </div>
              </div>

              <!-- Ações -->
              <div class="flex items-center gap-2">
                <%= link_to unidade_medida_path(unidade_medida), class: "flex-1 inline-flex items-center justify-center gap-2 p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors", title: "Ver detalhes" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  <span class="text-sm font-medium">Ver</span>
                <% end %>

                <%= link_to edit_unidade_medida_path(unidade_medida), class: "flex-1 inline-flex items-center justify-center gap-2 p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors", title: "Editar" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <span class="text-sm font-medium">Editar</span>
                <% end %>

                <%= button_to unidade_medida_path(unidade_medida), 
                    method: :delete, 
                    data: { confirm: "Tem certeza que deseja excluir esta unidade de medida?" }, 
                    class: "flex-1 inline-flex items-center justify-center gap-2 p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors",
                    title: "Excluir",
                    form: { style: "display: inline;" } do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <span class="text-sm font-medium">Excluir</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Estado Vazio -->
      <div class="text-center py-16 bg-white rounded-2xl shadow-sm border border-gray-200">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">
          <% if params[:search].present? %>
            Nenhuma unidade encontrada
          <% else %>
            Nenhuma unidade cadastrada
          <% end %>
        </h3>
        <p class="text-sm text-gray-600 mb-6">
          <% if params[:search].present? %>
            Não encontramos unidades com o termo "<%= params[:search] %>". Tente buscar novamente.
          <% else %>
            Comece cadastrando sua primeira unidade de medida no sistema.
          <% end %>
        </p>
        <% if params[:search].present? %>
          <%= link_to "Limpar Busca", unidade_medidas_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <span>Limpar Busca</span>
          <% end %>
        <% else %>
          <%= link_to "Cadastrar Primeira Unidade", new_unidade_medida_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <span>Nova Unidade</span>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.5s ease-out both;
}

/* Prevenir overflow de texto */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-wrap: break-word;
  word-break: break-word;
}

.break-all {
  word-break: break-all;
  overflow-wrap: break-word;
}

.break-words {
  word-wrap: break-word;
  overflow-wrap: break-word;
}
</style>

<script>
// Animação de entrada
document.addEventListener('DOMContentLoaded', function() {
  const cards = document.querySelectorAll('.animate-fade-in');
  cards.forEach((card, index) => {
    card.style.animationDelay = `${index * 0.05}s`;
  });
});
</script>