<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to unidade_medidas_path, class: "inline-flex items-center gap-2 text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>Voltar para Unidades de Medida</span>
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 bg-gradient-to-br from-yellow-500 to-orange-600 rounded-2xl p-3 shadow-lg">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Editar Unidade de Medida</h1>
          <p class="mt-1 text-sm text-gray-600">Atualize as informações da unidade</p>
        </div>
      </div>
    </div>

    <%= form_with(model: @unidade_medida, local: true, class: "space-y-6") do |form| %>
      <!-- Mensagens de Erro -->
      <% if @unidade_medida.errors.any? %>
        <div class="rounded-xl bg-red-50 border border-red-200 p-4 animate-shake">
          <div class="flex gap-3">
            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="flex-1">
              <h3 class="text-sm font-semibold text-red-800 mb-2">Erro ao atualizar a unidade</h3>
              <ul class="text-sm text-red-700 space-y-1">
                <% @unidade_medida.errors.full_messages.each do |message| %>
                  <li>• <%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Card do Formulário -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <!-- Header do Card -->
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 px-6 py-4 border-b border-gray-200">
          <div class="flex items-center gap-3">
            <div class="bg-indigo-100 rounded-lg p-2">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-gray-900">Informações da Unidade</h2>
          </div>
        </div>

        <!-- Conteúdo do Formulário -->
        <div class="p-6 space-y-6">
          <!-- Nome da Unidade -->
          <div>
            <%= form.label :nome, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
                Nome da Unidade <span class="text-red-500">*</span>
              </span>
            <% end %>
            <%= form.text_field :nome, 
                placeholder: "Ex: Miligrama por decilitro", 
                class: "block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400" %>
            <p class="mt-1 text-xs text-gray-500">Nome completo da unidade de medida</p>
          </div>

          <!-- Símbolo -->
          <div>
            <%= form.label :simbolo, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
                </svg>
                Símbolo <span class="text-red-500">*</span>
              </span>
            <% end %>
            <%= form.text_field :simbolo, 
                placeholder: "Ex: mg/dL, mmol/L, g/L", 
                class: "block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400" %>
            
            <!-- Exemplos de símbolos -->
            <div class="mt-3 bg-blue-50 rounded-lg p-3 border border-blue-100">
              <p class="text-xs font-medium text-blue-900 mb-2 flex items-center gap-1.5">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Exemplos de símbolos:
              </p>
              <div class="flex flex-wrap gap-2">
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-white text-blue-700 border border-blue-200">
                  mg/dL
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-white text-blue-700 border border-blue-200">
                  mmol/L
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-white text-blue-700 border border-blue-200">
                  g/L
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-white text-blue-700 border border-blue-200">
                  µg/mL
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-white text-blue-700 border border-blue-200">
                  células/µL
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-white text-blue-700 border border-blue-200">
                  UI/L
                </span>
              </div>
            </div>
          </div>

          <!-- Preview do Símbolo -->
          <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-5 border border-purple-100">
            <p class="text-xs font-medium text-purple-900 mb-3 flex items-center gap-1.5">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              Visualização:
            </p>
            <div class="flex items-center gap-3">
              <div class="flex-shrink-0 w-14 h-14 bg-white rounded-full flex items-center justify-center border-2 border-purple-200 shadow-sm">
                <span id="simbolo-preview" class="text-lg font-bold text-purple-600 break-all text-center px-2">
                  <%= @unidade_medida.simbolo %>
                </span>
              </div>
              <div>
                <p class="text-sm font-semibold text-gray-900" id="nome-preview"><%= @unidade_medida.nome %></p>
                <p class="text-xs text-gray-600">Como aparecerá no sistema</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Botões de Ação -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200 bg-white rounded-2xl shadow-sm p-6">
        <%= link_to unidade_medida_path(@unidade_medida), class: "inline-flex items-center gap-2 px-5 py-2.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
          <span>Cancelar</span>
        <% end %>
        
        <%= form.submit "Atualizar Unidade", class: "inline-flex items-center gap-2 px-6 py-2.5 border-transparent rounded-lg text-sm font-semibold text-white bg-gradient-to-r from-yellow-500 to-orange-600 hover:from-yellow-600 hover:to-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 shadow-sm transition-all cursor-pointer" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span>Atualizar Unidade</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5px); }
  75% { transform: translateX(5px); }
}

.animate-shake {
  animation: shake 0.3s ease-in-out;
}

.break-all {
  word-break: break-all;
  overflow-wrap: break-word;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const nomeInput = document.querySelector('input[name="unidade_medida[nome]"]');
  const simboloInput = document.querySelector('input[name="unidade_medida[simbolo]"]');
  const nomePreview = document.getElementById('nome-preview');
  const simboloPreview = document.getElementById('simbolo-preview');

  // Atualizar preview em tempo real
  if (nomeInput && nomePreview) {
    nomeInput.addEventListener('input', function() {
      nomePreview.textContent = this.value || '<%= @unidade_medida.nome %>';
    });
  }

  if (simboloInput && simboloPreview) {
    simboloInput.addEventListener('input', function() {
      simboloPreview.textContent = this.value || '<%= @unidade_medida.simbolo %>';
    });
  }

  // Preencher campo ao clicar nos exemplos
  const exemplos = document.querySelectorAll('.bg-blue-50 span');
  exemplos.forEach(exemplo => {
    exemplo.addEventListener('click', function() {
      if (simboloInput) {
        simboloInput.value = this.textContent.trim();
        simboloInput.focus();
        
        // Atualizar preview
        if (simboloPreview) {
          simboloPreview.textContent = this.textContent.trim();
        }
        
        // Destacar temporariamente
        this.classList.add('ring-2', 'ring-blue-500');
        setTimeout(() => {
          this.classList.remove('ring-2', 'ring-blue-500');
        }, 300);
      }
    });
  });
});
</script>