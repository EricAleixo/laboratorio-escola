<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50">
  <div class="px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Análise de Exames Emitidos</h1>
          <p class="mt-2 text-gray-600">Estatísticas e performance dos exames emitidos</p>
        </div>
        <%= link_to root_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Voltar ao Dashboard
        <% end %>
      </div>
    </div>

    <!-- Filtros -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Filtros</h3>
      <%= form_with(url: analise_emitidos_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-3 gap-4") do |form| %>
        <div>
          <%= form.label :data_inicio, "Data Início", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :data_inicio, 
              value: params[:data_inicio], 
              class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div>
          <%= form.label :data_fim, "Data Fim", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :data_fim, 
              value: params[:data_fim], 
              class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        
        <div class="flex items-end">
          <div class="flex gap-2">
            <%= form.submit "Filtrar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            <%= link_to "Limpar", analise_emitidos_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Estatísticas Principais -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-green-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Emitidos</p>
            <p class="text-2xl font-bold text-gray-900"><%= @total_emitidos %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-blue-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Emitidos Hoje</p>
            <p class="text-2xl font-bold text-gray-900"><%= @emitidos_hoje %></p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-purple-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Esta Semana</p>
            <p class="text-2xl font-bold text-gray-900"><%= @emitidos_semana %></p>
          </div>
          <div class="bg-purple-100 p-3 rounded-full">
            <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow-lg p-6 border-l-4 border-orange-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Este Mês</p>
            <p class="text-2xl font-bold text-gray-900"><%= @emitidos_mes %></p>
          </div>
          <div class="bg-orange-100 p-3 rounded-full">
            <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Análise de Resultados -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Distribuição de Resultados -->
      <div class="bg-white rounded-2xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Análise de Resultados
        </h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">Resultados Normais</span>
            </div>
            <span class="text-lg font-bold text-green-600"><%= @resultados_normais %></span>
          </div>
          <div class="flex items-center justify-between p-4 bg-red-50 rounded-lg">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-red-500 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">Resultados Abnormais</span>
            </div>
            <span class="text-lg font-bold text-red-600"><%= @resultados_abnormais %></span>
          </div>
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div class="flex items-center">
              <div class="w-3 h-3 bg-gray-500 rounded-full mr-3"></div>
              <span class="text-sm font-medium text-gray-900">Sem Resultado</span>
            </div>
            <span class="text-lg font-bold text-gray-600"><%= @total_emitidos%></span>
          </div>
        </div>
      </div>

      <!-- Top 5 Exames Emitidos -->
      <div class="bg-white rounded-2xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
          Top 5 Exames Emitidos
        </h3>
        <div class="space-y-4">
          <% if @top_emitidos.present? %>
            <% @top_emitidos.each_with_index do |(nome, quantidade), index| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full text-sm font-medium <%= index == 0 ? 'bg-yellow-100 text-yellow-800' : index == 1 ? 'bg-gray-100 text-gray-800' : index == 2 ? 'bg-orange-100 text-orange-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= index + 1 %>
                  </span>
                  <span class="ml-3 text-sm font-medium text-gray-900"><%= nome %></span>
                </div>
                <span class="text-sm font-semibold text-gray-600"><%= quantidade %></span>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4 text-gray-500">
              Nenhum exame emitido no período selecionado.
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Taxa de Sucesso -->
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Taxa de Sucesso
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-green-600 mb-2">
            <% if @total_emitidos.to_i > 0 %>
              <%= number_with_precision((@resultados_normais.to_f / @total_emitidos * 100), precision: 1) %>%
            <% else %>
              0%
            <% end %>
          </div>
          <div class="text-sm text-gray-600">Taxa de Resultados Normais</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-red-600 mb-2">
            <% if @total_emitidos.to_i > 0 %>
              <%= number_with_precision((@resultados_abnormais.to_f / @total_emitidos * 100), precision: 1) %>%
            <% else %>
              0%
            <% end %>
          </div>
          <div class="text-sm text-gray-600">Taxa de Resultados Abnormais</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-600 mb-2">
            <% if @total_emitidos.to_i > 0 %>
              <%= number_with_precision((@emitidos_hoje.to_f / @total_emitidos * 100), precision: 1) %>%
            <% else %>
              0%
            <% end %>
          </div>
          <div class="text-sm text-gray-600">Emitidos Hoje</div>
        </div>
      </div>
    </div>
  </div>
</div> 