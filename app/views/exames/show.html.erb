<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "Voltar para Exames", exames_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex justify-between items-center">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @exame.nome %></h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Detalhes do exame</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Editar", edit_exame_path(@exame), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= link_to "Excluir", exame_path(@exame), method: :delete, data: { confirm: "Tem certeza?" }, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Nome</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @exame.nome %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Descrição</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @exame.descricao.present? ? @exame.descricao : "Nenhuma descrição fornecida" %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Tipo</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @exame.tipo == "quantitativo" %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 capitalize">
                <%= @exame.tipo %>
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 capitalize">
                <%= @exame.tipo %>
              </span>
            <% end %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @exame.ativo? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Ativo
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Inativo
              </span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Resultados Qualitativos -->
  <% if @exame.tipo == 'qualitativo' %>
    <div class="mt-8">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Resultados Possíveis</h3>
          <p class="mt-1 text-sm text-gray-500">Este é um exame qualitativo com resultados definidos.</p>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="relative rounded-lg border border-green-200 bg-green-50 px-6 py-5 shadow-sm hover:border-green-300 transition">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="h-8 w-8 text-green-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                </div>
                <div class="min-w-0 flex-1">
                  <span class="absolute inset-0" aria-hidden="true"></span>
                  <p class="text-base font-semibold text-green-900">Presente</p>
                  <p class="text-sm text-green-700">Resultado positivo detectado</p>
                </div>
              </div>
            </div>

            <div class="relative rounded-lg border border-red-200 bg-red-50 px-6 py-5 shadow-sm hover:border-red-300 transition">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="h-8 w-8 text-red-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                </div>
                <div class="min-w-0 flex-1">
                  <span class="absolute inset-0" aria-hidden="true"></span>
                  <p class="text-base font-semibold text-red-900">Ausente</p>
                  <p class="text-sm text-red-700">Resultado negativo ou não detectado</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Unidades de Referência (apenas para exames quantitativos) -->
  <% if @exame.tipo == 'quantitativo' %>
    <div class="mt-8">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Unidades de Referência</h3>
          <p class="mt-2 text-sm text-gray-700">Valores de referência para este exame.</p>
        </div>
        <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
          <%= link_to "Adicionar Unidade de Referência", new_exame_unidade_referencia_path(@exame), class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
        </div>
      </div>
      
      <div class="mt-6">
        <% if @exame.unidade_referencias.any? %>
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Unidade</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Valor Mínimo</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Valor Máximo</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Faixa Etária | Sexo</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @exame.unidade_referencias.each do |ref| %>
                  <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                      <%= ref.unidade_medida.nome %> (<%= ref.unidade_medida.simbolo %>)
                    </td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= ref.valor_minimo %></td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= ref.valor_maximo %></td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <div class="flex flex-col">
                        <span class="font-medium"><%= ref.faixa_etaria %></span>
                        <span class="text-xs text-gray-400">
                          <% case ref.sexo %>
                          <% when 'M' %>
                            Masculino
                          <% when 'F' %>
                            Feminino
                          <% when 'A' %>
                            Ambos
                          <% end %>
                        </span>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12 bg-white rounded-lg shadow">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma unidade de referência</h3>
            <p class="mt-1 text-sm text-gray-500">Este exame ainda não possui unidades de referência cadastradas.</p>
            <div class="mt-6">
              <%= link_to "Adicionar primeira unidade", new_exame_unidade_referencia_path(@exame), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>