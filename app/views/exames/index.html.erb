<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Exames</h1>
      <p class="mt-2 text-sm text-gray-700">Lista de todos os exames cadastrados no sistema.</p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
      <%= link_to "Novo Exame", new_exame_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto" %>
    </div>
  </div>
  

  <div class="mt-6">
    <%= form_with(url: exames_path, method: :get, local: true, class: "flex gap-4") do |form| %>
      <div class="flex-1">
        <%= form.text_field :search, 
            value: params[:search], 
            placeholder: "Buscar por nome...", 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2" %>
      </div>
      <div class="flex gap-2">
        <%= form.submit "Buscar", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Limpar", exames_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
  
  <!-- Desktop Table -->
  <div class="mt-8 hidden lg:block">
    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
      <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Nome</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Descrição</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 flex justify-end pr-11">Ações</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @exames.each do |exame| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                    <%= link_to exame.nome, exame_path(exame), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= truncate(exame.descricao, length: 50) if exame.descricao.present? %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <% if exame.ativo? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Ativo
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Inativo
                      </span>
                    <% end %>
                  </td>
                  <td class="relative whitespace-nowrap flex items-center py-4 pl-3 pr-4 text-right text-sm font-medium justify-end sm:pr-6">
                    <%= link_to edit_exame_path(exame), class: "text-indigo-600 hover:text-indigo-900 mr-4 w-fit flex" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                      </svg>
                    <% end %>
                    <%= button_to exame_path(exame), 
                        method: :delete, 
                        data: { confirm: "Tem certeza?" }, 
                        class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" do%>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                        </svg>
                      <%end%>

                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>

  <!-- Mobile Card View -->
  <div class="mt-8 lg:hidden">
    <div class="space-y-4">
      <% @exames.each do |exame| %>
        <div class="bg-white shadow rounded-lg border border-gray-200 overflow-hidden">
          <div class="px-4 py-4">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-medium text-gray-900">
                <%= link_to exame.nome, exame_path(exame), class: "text-indigo-600 hover:text-indigo-900" %>
              </h3>
              <% if exame.ativo? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Ativo
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Inativo
                </span>
              <% end %>
            </div>
            
            <% if exame.descricao.present? %>
              <div class="text-sm text-gray-600 mb-4">
                <span class="font-medium text-gray-900">Descrição:</span>
                <div class="mt-1"><%= exame.descricao %></div>
              </div>
            <% end %>
            
            <div class="flex flex-wrap gap-2">
              <%= link_to "Ver", exame_path(exame), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
              <%= link_to "Editar", edit_exame_path(exame), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <%= button_to "Excluir", exame_path(exame), 
                  method: :delete, 
                  data: { confirm: "Tem certeza?" }, 
                  class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700",
                  form: { class: "inline" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
