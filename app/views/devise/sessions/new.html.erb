<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo e Título -->
    <div class="text-center">
      <div class="mx-auto h-20 w-20 bg-gradient-to-br from-orange-400 to-orange-600 rounded-2xl flex items-center justify-center mb-6 shadow-lg transform rotate-3 hover:rotate-0 transition-transform duration-300">
        <span class="text-white font-bold text-2xl">LAB</span>
      </div>
      <h2 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
        Laboratório Escola
      </h2>
      <p class="mt-2 text-sm text-gray-600">Faça login para acessar o sistema</p>
    </div>

    <!-- Formulário de Login -->
    <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6") do |f| %>
        <div>
          <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "seu@email.com" %>
        </div>

        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, 
                autocomplete: "current-password",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                placeholder: "Digite sua senha" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Entrar", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-105" %>
        </div>
      <% end %>

      <!-- Links adicionais (apenas senha esquecida) -->
      <div class="mt-6 text-center">
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-500 transition-colors" %>
        <% end %>
      </div>
    </div>

    <!-- Informações do Sistema -->
    <div class="text-center text-xs text-gray-500">
      <p>Sistema de Gestão Laboratorial</p>
      <p class="mt-1">© <%= Date.current.year %> Laboratório Escola</p>
    </div>
  </div>
</div>
