<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <%= link_to "← Voltar para Exames de Pacientes", exame_pacientes_path, class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
  </div>

  <% ref = @exame_paciente.unidade_referencia %>
  <% situacao = @exame_paciente.situacao_resultado %>

  <div class="flex items-center space-x-4 mb-8">
    <div class="flex items-center justify-center w-16 h-16 rounded-full
      <%= case situacao
        when :normal then 'bg-green-100 text-green-700'
        when :abaixo then 'bg-yellow-100 text-yellow-700'
        when :acima then 'bg-red-100 text-red-700'
        else 'bg-gray-100 text-gray-700' end %>">

      <% if situacao == :normal %>
        <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
      <% elsif situacao == :abaixo %>
        <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01" /><circle cx="12" cy="12" r="10" /></svg>
      <% elsif situacao == :acima %>
        <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
      <% else %>
        <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01" /></svg>
      <% end %>
    </div>
    <div>
      <div class="text-lg font-bold">
        <span>Resultado:</span>
        <span class="text-2xl align-middle ml-2"><%= @exame_paciente.resultado %></span>
        <% if ref %>
          <span class="ml-2 text-base text-gray-600 font-normal">(<%= ref.unidade_medida.simbolo %>)</span>
        <% end %>
      </div>
      <div class="mt-1">
        <% if situacao == :normal %>
          <span class="text-green-700 font-semibold">Dentro do esperado</span>
        <% elsif situacao == :abaixo %>
          <span class="text-yellow-700 font-semibold">Abaixo do esperado</span>
        <% elsif situacao == :acima %>
          <span class="text-red-700 font-semibold">Acima do esperado</span>
        <% else %>
          <span class="text-gray-700 font-semibold">Referência indefinida</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 15c2.485 0 4.797.657 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
        Dados do Paciente
      </h3>
      <p><strong>Nome:</strong> <%= @exame_paciente.paciente.nome %></p>
      <p><strong>Data de Nascimento:</strong> <%= @exame_paciente.paciente.data_nascimento.strftime('%d/%m/%Y') %></p>
      <p><strong>Idade:</strong> <%= @exame_paciente.paciente.idade %> anos</p>
      <p><strong>Sexo:</strong> <%= @exame_paciente.paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2a4 4 0 014-4h4" /></svg>
        Dados do Exame
      </h3>
      <p><strong>Tipo:</strong> <%= @exame_paciente.exame.nome %></p>
      <p><strong>Data do Exame:</strong> <%= @exame_paciente.data_exame.strftime('%d/%m/%Y') %></p>
      <% if ref %>
        <p><strong>Referência:</strong> <span class="font-mono"><%= ref.valor_minimo %> - <%= ref.valor_maximo %> <%= ref.unidade_medida.nome %> (<%= ref.unidade_medida.simbolo %>)</span></p>
        <p><strong>Faixa Etária:</strong> <span class="text-sm text-gray-600"><%= ref.faixa_etaria %> | <%= ref.sexo == 'M' ? 'Masculino' : (ref.sexo == 'F' ? 'Feminino' : 'Ambos') %></span></p>
      <% else %>
        <p class="text-red-600">Sem referência cadastrada para este sexo e idade.</p>
      <% end %>
    </div>
  </div>

  <% if @exame_paciente.observacoes.present? %>
    <div class="bg-white shadow rounded-lg p-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-800 mb-2 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 14h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8s-9-3.582-9-8a9 9 0 1118 0z" /></svg>
        Observações
      </h3>
      <div class="bg-gray-50 rounded-md p-4 text-gray-700"><%= @exame_paciente.observacoes %></div>
    </div>
  <% end %>
</div>
