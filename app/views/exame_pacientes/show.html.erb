<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-5xl mx-auto">
    <!-- Header com botão voltar -->
    <div class="mb-8">
      <%= link_to exame_pacientes_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium transition-colors group" do %>
        <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Voltar para Exames de Pacientes
      <% end %>
    </div>

    <% ref = @exame_paciente.unidade_referencia %>
    <% situacao = @exame_paciente.situacao_resultado %>
    <% tipo_exame = @exame_paciente.exame.tipo %>

    <!-- Card Principal do Resultado -->
    <div class="bg-white rounded-3xl shadow-2xl overflow-hidden mb-8">
      <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-8 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-white mb-2"><%= @exame_paciente.exame.nome %></h1>
            <div class="flex items-center gap-3">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-500 bg-opacity-20 text-white">
                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <%= @exame_paciente.paciente.nome %>
              </span>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-500 bg-opacity-20 text-white">
                <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <%= @exame_paciente.data_exame.strftime('%d/%m/%Y') %>
              </span>
            </div>
          </div>
          <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold uppercase tracking-wider bg-white text-indigo-600 shadow-lg">
            <%= tipo_exame %>
          </span>
        </div>
      </div>

      <!-- Área do Resultado -->
      <div class="p-8">
        <% if tipo_exame == 'qualitativo' %>
          <!-- Resultado Qualitativo -->
          <div class="flex flex-col items-center py-8">
            <div class="relative">
              <div class="w-40 h-40 rounded-full flex items-center justify-center shadow-2xl transition-transform hover:scale-105
                <%= situacao == :presente ? 'bg-gradient-to-br from-green-400 to-green-600' : 'bg-gradient-to-br from-red-400 to-red-600' %>">
                <% if situacao == :presente %>
                  <svg class="w-24 h-24 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                <% else %>
                  <svg class="w-24 h-24 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                <% end %>
              </div>
              <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2">
                <span class="inline-block px-6 py-2 rounded-full font-bold text-lg shadow-lg
                  <%= situacao == :presente ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= @exame_paciente.resultado %>
                </span>
              </div>
            </div>
            <div class="mt-8 text-center">
              <p class="text-2xl font-semibold text-gray-700 mb-2">
                <%= situacao == :presente ? 'Detectado' : 'Não Detectado' %>
              </p>
              <p class="text-gray-500">Resultado do exame qualitativo</p>
            </div>
          </div>
        <% else %>
          <!-- Resultado Quantitativo -->
          <div class="flex flex-col md:flex-row items-center gap-8 py-6">
            <div class="flex-shrink-0">
              <div class="relative">
                <div class="w-36 h-36 rounded-full flex flex-col items-center justify-center shadow-2xl transition-transform hover:scale-105
                  <%= case situacao
                    when :normal then 'bg-gradient-to-br from-green-400 to-green-600'
                    when :abaixo then 'bg-gradient-to-br from-yellow-400 to-yellow-600'
                    when :acima then 'bg-gradient-to-br from-red-400 to-red-600'
                    else 'bg-gradient-to-br from-gray-400 to-gray-600' end %>">
                  <% if situacao == :normal %>
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  <% elsif situacao == :abaixo %>
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                    </svg>
                  <% elsif situacao == :acima %>
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
                    </svg>
                  <% else %>
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  <% end %>
                  <span class="mt-2 text-xs font-bold uppercase tracking-wider text-white opacity-90">
                    <%= situacao.to_s.titleize %>
                  </span>
                </div>
              </div>
            </div>
            <div class="flex-1 text-center md:text-left">
              <div class="mb-4">
                <span class="text-gray-600 text-xl font-medium">Resultado</span>
                <div class="flex items-baseline justify-center md:justify-start gap-3 mt-2">
                  <span class="text-6xl font-bold <%= case situacao
                    when :normal then 'text-green-600'
                    when :abaixo then 'text-yellow-600'
                    when :acima then 'text-red-600'
                    else 'text-gray-600' end %>">
                    <%= @exame_paciente.resultado %>
                  </span>
                  <% if ref %>
                    <span class="text-2xl text-gray-500 font-medium"><%= ref.unidade_medida.simbolo %></span>
                  <% end %>
                </div>
              </div>
              <% if ref %>
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-lg">
                  <span class="text-sm text-gray-600">Referência:</span>
                  <span class="font-mono font-bold text-gray-800"><%= ref.valor_minimo %> - <%= ref.valor_maximo %> <%= ref.unidade_medida.simbolo %></span>
                </div>
              <% end %>
              <div class="mt-4">
                <span class="inline-block px-4 py-2 rounded-lg font-semibold text-base
                  <%= case situacao
                    when :normal then 'bg-green-100 text-green-800'
                    when :abaixo then 'bg-yellow-100 text-yellow-800'
                    when :acima then 'bg-red-100 text-red-800'
                    else 'bg-gray-100 text-gray-800' end %>">
                  <%= case situacao
                    when :normal then 'Dentro dos valores de referência'
                    when :abaixo then 'Abaixo dos valores de referência'
                    when :acima then 'Acima dos valores de referência'
                    else 'Sem valores de referência disponíveis' end %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Cards de Informações -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Card Paciente -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
        <div class="bg-gradient-to-r from-purple-500 to-pink-500 px-6 py-4">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Dados do Paciente
          </h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-start">
            <span class="text-gray-500 font-medium w-32 flex-shrink-0">Nome</span>
            <span class="text-gray-900 font-semibold"><%= @exame_paciente.paciente.nome %></span>
          </div>
          <div class="flex items-start">
            <span class="text-gray-500 font-medium w-32 flex-shrink-0">Nascimento</span>
            <span class="text-gray-900"><%= @exame_paciente.paciente.data_nascimento.strftime('%d/%m/%Y') %></span>
          </div>
          <div class="flex items-start">
            <span class="text-gray-500 font-medium w-32 flex-shrink-0">Idade</span>
            <span class="text-gray-900 font-semibold"><%= @exame_paciente.paciente.idade %> anos</span>
          </div>
          <div class="flex items-start">
            <span class="text-gray-500 font-medium w-32 flex-shrink-0">Sexo</span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @exame_paciente.paciente.sexo == 'M' ? 'bg-blue-100 text-blue-800' : 'bg-pink-100 text-pink-800' %>">
              <%= @exame_paciente.paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %>
            </span>
          </div>
        </div>
      </div>

      <!-- Card Exame -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
        <div class="bg-gradient-to-r from-blue-500 to-indigo-500 px-6 py-4">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            Informações do Exame
          </h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-start">
            <span class="text-gray-500 font-medium w-32 flex-shrink-0">Exame</span>
            <span class="text-gray-900 font-semibold"><%= @exame_paciente.exame.nome %></span>
          </div>
          <div class="flex items-start">
            <span class="text-gray-500 font-medium w-32 flex-shrink-0">Tipo</span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 capitalize">
              <%= tipo_exame %>
            </span>
          </div>
          <div class="flex items-start">
            <span class="text-gray-500 font-medium w-32 flex-shrink-0">Data</span>
            <span class="text-gray-900"><%= @exame_paciente.data_exame.strftime('%d/%m/%Y') %></span>
          </div>
          <% if tipo_exame == 'quantitativo' && ref %>
            <div class="flex items-start">
              <span class="text-gray-500 font-medium w-32 flex-shrink-0">Faixa Etária</span>
              <span class="text-gray-900 text-sm"><%= ref.faixa_etaria %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Observações -->
    <% if @exame_paciente.observacoes.present? %>
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
        <div class="bg-gradient-to-r from-amber-500 to-orange-500 px-6 py-4">
          <h3 class="text-xl font-bold text-white flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
            </svg>
            Observações
          </h3>
        </div>
        <div class="p-6">
          <p class="text-gray-700 leading-relaxed"><%= @exame_paciente.observacoes %></p>
        </div>
      </div>
    <% end %>

    <!-- Ações -->
    <div class="flex flex-col sm:flex-row gap-4 justify-end">
      <%= link_to edit_exame_paciente_path(@exame_paciente), class: "inline-flex items-center justify-center px-6 py-3 border-2 border-indigo-600 rounded-xl text-base font-semibold text-indigo-600 bg-white hover:bg-indigo-50 transition-all shadow-md hover:shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar Exame
      <% end %>
      <%= button_to exame_paciente_path(@exame_paciente), method: :delete, class: "inline-flex items-center justify-center px-6 py-3 border-2 border-transparent rounded-xl text-base font-semibold text-white bg-red-600 hover:bg-red-700 transition-all shadow-md hover:shadow-lg", data: { turbo_confirm: "Tem certeza que deseja excluir este exame?" } do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Excluir Exame
      <% end %>
    </div>
  </div>
</div>