<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-4">
          <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl p-3 shadow-lg">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Registrar Resultados</h1>
            <p class="mt-1 text-sm text-gray-600">Preencha os resultados dos exames realizados</p>
          </div>
        </div>
        
        <%= link_to exame_pacientes_path, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-all shadow-sm" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
          <span>Pular esta etapa</span>
        <% end %>
      </div>

      <!-- Info do Paciente -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center gap-6">
          <div class="bg-indigo-100 rounded-full p-4">
            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div class="flex-1">
            <h2 class="text-xl font-semibold text-gray-900"><%= @paciente.nome %></h2>
            <div class="flex items-center gap-6 mt-2 text-sm text-gray-600">
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <%= @paciente.data_nascimento.strftime('%d/%m/%Y') %>
              </span>
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                <%= @paciente.sexo == 'M' ? 'Masculino' : 'Feminino' %>
              </span>
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                <%= @exame_pacientes.count %> exame(s)
              </span>
            </div>
          </div>
          <div class="text-right">
            <div class="text-sm text-gray-500">Progresso</div>
            <div class="text-2xl font-bold text-indigo-600">
              <span id="progressCount">0</span>/<%= @exame_pacientes.count %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Lista de Exames -->
    <div class="space-y-3">
      <% @exame_pacientes.each_with_index do |exame_paciente, index| %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition-shadow exam-card" data-exam-id="<%= exame_paciente.id %>">
          <div class="p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4 flex-1">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-lg flex items-center justify-center">
                    <span class="text-lg font-bold text-indigo-600"><%= index + 1 %></span>
                  </div>
                </div>
                
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900"><%= exame_paciente.exame.nome %></h3>
                  <div class="flex items-center gap-4 mt-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= exame_paciente.exame.tipo == 'qualitativo' ? 'bg-purple-100 text-purple-700' : 'bg-green-100 text-green-700' %>">
                      <%= exame_paciente.exame.tipo.capitalize %>
                    </span>
                    <span class="text-sm text-gray-500"><%= exame_paciente.data_exame.strftime('%d/%m/%Y') %></span>
                  </div>
                </div>
              </div>

              <div class="flex items-center gap-3">
                <div class="status-badge hidden" data-status="filled">
                  <div class="flex items-center gap-2 px-3 py-2 bg-green-50 border border-green-200 rounded-lg">
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-sm font-medium text-green-700">Preenchido</span>
                  </div>
                </div>
                
                <button 
                  type="button"
                  onclick="openModal('<%= exame_paciente.id %>', '<%= exame_paciente.exame.nome %>', '<%= exame_paciente.exame.tipo %>', '<%= exame_paciente.resultado %>', '<%= exame_paciente.observacoes %>')"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all shadow-sm">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  Registrar Resultado
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Botão Finalizar -->
    <div class="mt-8 flex justify-center">
      <%= link_to exame_pacientes_path, 
          class: "inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white text-lg font-semibold rounded-xl transition-all shadow-lg hover:shadow-xl",
          id: "finalizarBtn" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>Finalizar Cadastro</span>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="resultadoModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full transform transition-all" onclick="event.stopPropagation()">
    <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-6 py-4 rounded-t-2xl">
      <div class="flex items-center justify-between">
        <h3 class="text-xl font-bold text-white" id="modalTitle">Registrar Resultado</h3>
        <button onclick="closeModal()" class="text-white hover:text-gray-200 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <%= form_with url: '#', method: :patch, id: 'resultadoForm', class: 'p-6' do |f| %>
      <input type="hidden" id="examePacienteId" name="exame_paciente_id">
      
      <!-- Campo Quantitativo -->
      <div id="quantitativoField" class="hidden">
        <label class="block text-sm font-semibold text-gray-700 mb-2">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
            </svg>
            Valor do Resultado <span class="text-red-500">*</span>
          </span>
        </label>
        <input 
          type="number" 
          step="any"
          id="resultadoQuantitativo"
          placeholder="Digite o valor numérico"
          class="block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400"
        >
        <p class="mt-1 text-xs text-gray-500">Digite apenas números (use ponto para decimais)</p>
      </div>

      <!-- Campo Qualitativo -->
      <div id="qualitativoField" class="hidden">
        <label class="block text-sm font-semibold text-gray-700 mb-3">
          Resultado <span class="text-red-500">*</span>
        </label>
        <div class="space-y-3" id="qualitativoOptions">
          <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer transition-all radio-option radio-presente">
            <input 
              type="radio" 
              name="resultado_qualitativo" 
              value="Presente"
              class="w-5 h-5 text-green-600 border-gray-300 focus:ring-green-500"
            >
            <div class="ml-3 flex items-center gap-3 flex-1">
              <div class="bg-green-100 rounded-lg p-2 transition-colors">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <span class="text-sm font-medium text-gray-900">Presente</span>
            </div>
          </label>
          
          <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer transition-all radio-option radio-ausente">
            <input 
              type="radio" 
              name="resultado_qualitativo" 
              value="Ausente"
              class="w-5 h-5 text-red-600 border-gray-300 focus:ring-red-500"
            >
            <div class="ml-3 flex items-center gap-3 flex-1">
              <div class="bg-red-100 rounded-lg p-2 transition-colors">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <span class="text-sm font-medium text-gray-900">Ausente</span>
            </div>
          </label>
        </div>
        <p class="mt-2 text-xs text-red-500 hidden" id="qualitativoError">Por favor, selecione uma opção</p>
      </div>

      <style>
        .radio-presente:hover {
          border-color: #86efac !important;
          background-color: #f0fdf4 !important;
        }
        .radio-ausente:hover {
          border-color: #fca5a5 !important;
          background-color: #fef2f2 !important;
        }
      </style>

      <!-- Observações -->
      <div class="mt-6">
        <label class="block text-sm font-semibold text-gray-700 mb-2">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
            </svg>
            Observações (Opcional)
          </span>
        </label>
        <textarea 
          id="observacoes"
          name="observacoes"
          rows="3"
          placeholder="Adicione observações sobre o exame..."
          class="block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-gray-900 placeholder-gray-400 resize-none"
        ></textarea>
      </div>

      <!-- Botões -->
      <div class="flex gap-3 mt-6">
        <button 
          type="button"
          onclick="closeModal()"
          class="flex-1 px-4 py-3 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all">
          Cancelar
        </button>
        <button 
          type="submit"
          class="flex-1 px-4 py-3 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-lg transition-all shadow-sm">
          Salvar Resultado
        </button>
      </div>
    <% end %>
  </div>
</div>

<script>
let currentExamId = null;

function openModal(examId, examName, examType, currentResult) {
  currentExamId = examId;
  document.getElementById('modalTitle').textContent = examName;
  document.getElementById('examePacienteId').value = examId;
  
  // Resetar campos
  document.getElementById('resultadoQuantitativo').value = '';
  document.querySelectorAll('input[name="resultado_qualitativo"]').forEach(r => r.checked = false);
  document.querySelectorAll('.radio-option').forEach(opt => {
    opt.classList.remove('border-indigo-500', 'bg-indigo-50');
    opt.classList.add('border-gray-200');
  });
  
  // Mostrar campo correto baseado no tipo
  const quantField = document.getElementById('quantitativoField');
  const qualField = document.getElementById('qualitativoField');
  
  if (examType === 'quantitativo') {
    quantField.classList.remove('hidden');
    qualField.classList.add('hidden');
    if (currentResult && currentResult !== '') {
      document.getElementById('resultadoQuantitativo').value = currentResult;
    }
  } else {
    quantField.classList.add('hidden');
    qualField.classList.remove('hidden');
    
    // Marcar radio se já tiver valor
    if (currentResult && currentResult !== '') {
      const radio = document.querySelector(`input[name="resultado_qualitativo"][value="${currentResult}"]`);
      if (radio) {
        radio.checked = true;
        // Adicionar visual de selecionado
        const label = radio.closest('.radio-option');
        if (label) {
          label.classList.remove('border-gray-200');
          label.classList.add('border-indigo-500', 'bg-indigo-50');
        }
      }
    }
  }
  
  document.getElementById('resultadoModal').classList.remove('hidden');
}

function closeModal() {
  document.getElementById('resultadoModal').classList.add('hidden');
  document.getElementById('resultadoForm').reset();
  currentExamId = null;
}

// Fechar modal ao clicar fora
document.getElementById('resultadoModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeModal();
  }
});

// Submeter formulário
document.getElementById('resultadoForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const examId = document.getElementById('examePacienteId').value;
  const observacoes = document.getElementById('observacoes').value;
  let resultado = null;
  
  // Verificar qual tipo de campo está visível
  const quantField = document.getElementById('quantitativoField');
  const qualField = document.getElementById('qualitativoField');
  
  if (!quantField.classList.contains('hidden')) {
    // Campo quantitativo
    resultado = document.getElementById('resultadoQuantitativo').value;
    if (!resultado || resultado === '') {
      alert('Por favor, preencha o valor do resultado');
      document.getElementById('resultadoQuantitativo').focus();
      return;
    }
  } else if (!qualField.classList.contains('hidden')) {
    // Campo qualitativo
    const radioSelecionado = document.querySelector('input[name="resultado_qualitativo"]:checked');
    if (!radioSelecionado) {
      alert('Por favor, selecione uma opção (Presente ou Ausente)');
      document.getElementById('qualitativoError').classList.remove('hidden');
      return;
    }
    resultado = radioSelecionado.value;
  }
  
  if (!resultado) {
    alert('Por favor, preencha o resultado do exame');
    return;
  }
  
  // Fazer requisição AJAX
  fetch(`/exame_pacientes/${examId}/atualizar_resultado`, {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
    },
    body: JSON.stringify({
      resultado: resultado,
      observacoes: observacoes
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      // Marcar como preenchido
      const card = document.querySelector(`[data-exam-id="${examId}"]`);
      const statusBadge = card.querySelector('.status-badge');
      statusBadge.classList.remove('hidden');
      
      // Atualizar contador
      updateProgress();
      
      // Fechar modal
      closeModal();
      
      // Mostrar mensagem de sucesso
      showToast('Resultado salvo com sucesso!', 'success');
    } else {
      showToast('Erro ao salvar resultado', 'error');
    }
  })
  .catch(error => {
    console.error('Erro:', error);
    showToast('Erro ao salvar resultado', 'error');
  });
});

function updateProgress() {
  const filled = document.querySelectorAll('.status-badge:not(.hidden)').length;
  document.getElementById('progressCount').textContent = filled;
}

function showToast(message, type) {
  const toast = document.createElement('div');
  toast.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg text-white font-medium z-50 transform transition-all ${
    type === 'success' ? 'bg-green-600' : 'bg-red-600'
  }`;
  toast.textContent = message;
  document.body.appendChild(toast);
  
  setTimeout(() => {
    toast.style.opacity = '0';
    setTimeout(() => toast.remove(), 300);
  }, 3000);
}

// Inicializar progresso
updateProgress();

// Adicionar feedback visual ao selecionar radio buttons
document.querySelectorAll('.radio-option').forEach(option => {
  const radio = option.querySelector('input[type="radio"]');
  
  radio.addEventListener('change', function() {
    // Remover seleção de todas as opções
    document.querySelectorAll('.radio-option').forEach(opt => {
      opt.classList.remove('border-indigo-500', 'bg-indigo-50');
      opt.classList.add('border-gray-200');
    });
    
    // Adicionar seleção à opção marcada
    if (this.checked) {
      option.classList.remove('border-gray-200');
      option.classList.add('border-indigo-500', 'bg-indigo-50');
      
      // Esconder erro se houver
      const error = document.getElementById('qualitativoError');
      if (error) error.classList.add('hidden');
    }
  });
});

// Prevenir submit padrão do form
document.getElementById('resultadoForm').addEventListener('keypress', function(e) {
  if (e.key === 'Enter' && e.target.tagName !== 'TEXTAREA') {
    e.preventDefault();
    this.dispatchEvent(new Event('submit'));
  }
});
</script>